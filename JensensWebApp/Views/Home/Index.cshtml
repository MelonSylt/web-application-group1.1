@model IList<JensensWebApp.Models.Article>


@{
    ViewBag.Title = "Articles";
 var topicDisplayNames = ViewBag.TopicDisplayNames as Dictionary<string, string>;
}





<!-- Main Article RAD 1-->
<div class="row mt-5 ">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="main-news-banner">HUVUDNYHETER</div>
            <a href="@Model[0].Link" target="_blank" class="card-link main-news-read-more">
                <img src="Pictures/News.webp" alt="Bildbeskrivning" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title main-news-title">@Model[0].Title</h5>
                    <p class="card-text main-news-summary">@Model[0].Summary</p>
                    
                </div>
                
            </a>
            
        </div>
    </div>

<!-- Senaste nytt RAD 1 -->
<div class="col">
    <div class="card">
         <div class="card-title-2">SENASTE NYTT</div>
        <div class="card-body">
           
            <table class="table">
                <tbody>
                    @foreach (var article in Model.Take(10))
                    {
                        <tr>
                            <td class="td-style"><a href="@article.Link">@article.Title</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>




<!-- Form RAD 1 -->
<div class="card mt-4">
    
    <div class="card-title-2">SÖK NYHETER</div>
    <div class="card-body">
      
        <div class="container">
            @using (Html.BeginForm("Index", "Home", FormMethod.Get))
            {
                <label for="topic">Select a topic:</label>
                <select id="topic" name="topic" class="form-select">
                    <option value="">All</option>
                    @foreach (var topic in topicDisplayNames)
                    {
                        <option value="@topic.Key">@topic.Value</option>
                    }
                </select>

                <label for="sortBy">Sort by:</label>
                <select id="sortBy" name="sortBy" class="form-select">
                    <option value="">Default</option>
                    <option value="newest">Newest to Oldest</option>
                    <option value="oldest">Oldest to Newest</option>
                </select>

                <button type="submit" class="btn btn-primary">Filter</button>
            }
        </div>
    </div>
</div>

    </div>

<!-- Quote Randomizer-->
    <div class="row">
    <div class="col-4">
        
    <button class="buttonQuote" onclick="generateRandomQuote()"> KLICKA FÖR INSPIRATION </button>
    <p id="quote"></p>
    </div>

<!-- ReklamCarousel-->
<div class="col-8">
    <div class="ad-carousel">
        <div id="adContainer" class="ad-container">
        <img src="Pictures/ad1.png" alt="Reklam 1">
         <img src="Pictures/ad2.jpg" alt="Reklam 2">
          <img src="Pictures/ad3.png" alt="Reklam 3">
         <img src="Pictures/ad4.jpg" alt="Reklam 4">
        </div>
    </div>
</div>


<!-- Mellanstora artiklar RAD 2-->
<div class="col-md-8">
    <div class="row">
        @foreach (var article in Model.Take(6))
        {
            <div class="col-md-6">
                <div class="card mb-4">
                    <img src="Pictures/News.webp" alt="Bildbeskrivning" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Summary</p>
                        <a href="@article.Link" class="card-link" target="_blank">Read More</a>
                        <p class="card-text"><small class="text-muted">@article.Published.ToString("yyyy-MM-dd HH:mm:ss")</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<!-- Sidobody med mindre artiklar RAD 2-->
    <div class="col">
      
  @foreach (var article in Model.Take(3))
        {
            <div class="card mb-4">
                  <div class="card-title-2"></div>
                <div class="card-body adjust">
                    <h5 class="card-title">@article.Title</h5>
                    <p class="card-text">@article.Summary</p>
                    <a href="@article.Link" class="card-link" target="_blank">Read More</a>
                    <p class="card-text"><small class="text-muted">@article.Published.ToString("yyyy-MM-dd HH:mm:ss")</small></p>
                </div>
            </div>
        }
   
    </div>
</div>

   <script>
        // Reklam-carousel stannar när man hovrar över den 
        var carousel = document.getElementById('adContainer');
        carousel.addEventListener("mouseenter", function() {
        carousel.style.animationPlayState = "paused";
            });
        carousel.addEventListener('mouseleave', function() {        
        carousel.style.animationPlayState = 'running';
            });


        // Array med citat
        var quotes = [
            "The only way to do great work is to love what you do. - Steve Jobs",
            "Success is not the key to happiness. Happiness is the key to success. - Albert Schweitzer",
            "Innovation distinguishes between a leader and a follower. - Steve Jobs",
            "The only limit to our realization of tomorrow will be our doubts of today. - Franklin D. Roosevelt",
            "Believe you can and you're halfway there. - Theodore Roosevelt"
        ];

        function generateRandomQuote() {
            // Generera slumpmässigt index
            var randomIndex = Math.floor(Math.random() * quotes.length);
            var randomQuote = quotes[randomIndex];

            // Visa citatet på sidan
            var quoteElement = document.getElementById("quote");
            quoteElement.textContent = randomQuote;
        }


       


    </script>

</section>
</main>




 
